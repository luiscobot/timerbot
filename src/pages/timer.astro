---
import Layout from "@/layouts/Layout.astro";
import TimerDisplay from "@/components/TimerDisplay.astro";
---

<Layout>
    <main>
        <div class="timer-container">
            <div class="background-image" data-background-image></div>
            <TimerDisplay />
        </div>
    </main>
</Layout>

<style>
    main {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .timer-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .background-image {
        width: 400px;
        height: 200px;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border-radius: 8px;
        display: none;
    }
</style>

<script src="@/scripts/timer.js"></script>
<script src="@/scripts/timer-background.js"></script>
